<%- include('./partials/header.ejs')%>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h1 class="alert alert-success text-center" role="alert">Add New
                    Student</h1>
                <form action="" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" name="name" class="form-control"
                            id="name">
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" name="age" class="form-control"
                            id="age">
                    </div>
                    <div class="mb-3">
                        <label for="fees" class="form-label">Fees</label>
                        <input type="text" name="fees" class="form-control"
                            id="fees">
                    </div>
                    <button class="btn btn-dark" >Submit</button>
                </form>
            </div>
            <div class="col-sm-6 mt-5">
                <h1 class="alert alert-dark text-center" role="alert">List Of
                    Student</h1>
                <table class="table table-striped table-hover">
                    <tr>
                        <thead>
                            <th scope="col">No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Fees</th>
                            <th scope="col">Age</th>
                            <th scope="col">Action</th>
                        </thead>
                    </tr>
                    <tbody>
                        <% var i=1%>
                            <% data.forEach(function(student) { %>
                                <tr>
                                    <td><%=i++%></td>
                                        <td>
                                            <%= student.name %></td>
                                            <td><%= student.age %></td>
                                                <td><%= student.fees %></td>
                                                    <td>
                                                       <form action="/student/edit/<%= student.id %>" method="get" class="d-inline">
                                                        <button class="btn
                                                        btn-info">Edit</button>
                                                       </form>
                                                       <form action="/student/delete/<%= student.id %>" method="post" class="d-inline">
                                                        <button class="btn
                                                        btn-primary">Delete</button>
                                                       </form>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                                </tbody>

                                            </table>
                                        </div>

                                    </div>
                                </div>

                                <%- include('./partials/footer.ejs')%>
